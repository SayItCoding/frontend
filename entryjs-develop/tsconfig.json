{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "lib": ["es6", "dom", "webworker"],
        "allowJs": true,
        "baseUrl": "./",
        "typeRoots": ["./types", "./node_modules/@types"],
        "allowSyntheticDefaultImports": true,

        //added it to prevent overwrite errors
        "noEmit": true,             // do not output compiled JS files
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "./types/**/*"
    ]
}
